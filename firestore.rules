
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC-FACING RULES (no auth required)
    // ======================================

    // Allow anyone to CREATE a new server via the pre-registration form.
    // Other operations on servers require authentication (see below).
    match /servers/{serverId} {
      allow create;
    }

    // AUTHENTICATED-ONLY RULES
    // ========================

    // Allow authenticated users to perform any action on their own user data.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // All other operations on servers (read, update, delete) require authentication.
    // This also secures all server sub-collections (faltas, licencas, etc.).
    match /servers/{serverId}/{allPaths=**} {
      allow read, update, delete: if request.auth != null;
    }
    
    // Notes are only accessible by authenticated users.
    match /notes/{noteId} {
      allow read, write: if request.auth != null;
    }
  }
}

    