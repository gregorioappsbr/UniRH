rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow public read access to notes, but only authenticated users can write
    match /notes/{noteId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read access to servers, but only authenticated users can write
    match /servers/{serverId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
