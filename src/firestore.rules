
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC-FACING RULES (no auth required)
    // ======================================

    // Allow anyone to CREATE or UPDATE a server via the public registration form.
    // Update is needed for the logic that avoids duplicate entries based on CPF.
    match /servers/{serverId} {
      allow create, update;
    }

    // AUTHENTICATED-ONLY RULES
    // ========================

    // Allow authenticated users to perform any action on their own user data.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Authenticated users can read and delete servers and their sub-collections.
    // Create/update is handled by the public rule above.
    match /servers/{serverId}/{allPaths=**} {
      allow read, delete: if request.auth != null;
    }
    
    // Notes are only accessible by authenticated users.
    match /notes/{noteId} {
      allow read, write: if request.auth != null;
    }
  }
}
